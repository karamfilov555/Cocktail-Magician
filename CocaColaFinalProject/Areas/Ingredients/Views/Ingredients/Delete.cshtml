@model IngredientViewModel

@{
    ViewData["Title"] = "Delete";
}

<center>   
<h3>Are you sure you want to delete this Ingredient?</h3>
    <div>
        <h2 class="hdr6">@Model.Name</h2>
        <hr />
        <div class="row">
            <div class="col-md-2 col-md-offset-5">
                <table class="table">
                        <thead>
                            <tr >
                   

                                <th><h5>Details:</h5></th>
                   
                            </tr>
                        </thead>
                        <tbody>

                            <tr>

                                <td>

                                    <h5>Name: @Model.Name</h5>
                                    <h5>Brand: @Model.Brand</h5>
                                    <h5>Country: @Model.Country </h5>

                                </td>

                            </tr>

                        </tbody>
                </table>
</center>
<center>
    <div class="row" style="padding-bottom:10px">
        <form class="col-md-4 col-md-offset-4" asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <input style="margin-bottom:10px" type="submit" class="pb-5 btn btn-danger"value="Delete" />    
            <a asp-action="Index" style="margin-bottom:5px" class="btn btn-success pt-6">Cancel</a>
        </form>
    </div>
</center>
         