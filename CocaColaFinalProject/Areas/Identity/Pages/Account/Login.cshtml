@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}
<div class="bg-1 section" id="events" style="margin-top:-18px">
    <div class="inner" data-image="/assets/images/content/ccback12.jpg" data-topspace="1" style="background-image: url('/assets/images/content/ccback12.jpg'); padding-top: 1px;">
        <div class="inner" data-topspace="1" data-bottomspace="1" style="background-image: none; ">
            <h3 class="hdr4">@ViewData["Title"]</h3>
            <div style="background-color:rgba(16, 6, 6, 0.80)">
                <div class="row" style="margin-right:20px">
                    <div class="col-md-4 col-md-offset-4">
                        <section>
                            <center>
                                <form id="account" method="post">
                                    <hr />
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">
                                        <label style="color:gold" asp-for="Input.Username"></label>
                                        <input asp-for="Input.Username" class="form-control" />
                                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label style="color:gold" asp-for="Input.Password"></label>
                                        <input asp-for="Input.Password" class="form-control" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    @*<div class="form-group">
                                        <div class="checkbox">
                                            <label asp-for="Input.RememberMe">
                                                <input asp-for="Input.RememberMe" />
                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                            </label>
                                        </div>
                                    </div>*@
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary">Log in</button>
                                    </div>
                                    <div class="form-group">
                                        <p>
                                            <a class="btn btn-sm" style="color:gold" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                        </p>
                                    </div>
                                </form>
                            </center>
                        </section>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
