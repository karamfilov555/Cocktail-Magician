@model BarViewModel

@{
    ViewData["Title"] = "Delete";
}

    <div class="bg-1 section" id="events" style="margin-top:-18px">
        <div class="inner" data-image="/assets/images/content/ccback12.jpg" data-topspace="1" style="background-image: url('/assets/images/content/ccback12.jpg'); padding-top: 1px;">
            <div class="inner" data-topspace="1" data-bottomspace="1" style="background-image: none; ">
                <h3 class="hdr4">Delete @Model.Name</h3>
                <div style="background-color:rgba(16, 6, 6, 0.80)">
                    <center>
                    <h3>Are you sure you want to delete this Bar?</h3>
                    </center>
                    <div>
                        <hr />
                        <table class="table">
                            <thead>
                                <tr>
                                    <th><h5></h5></th>
                                    <th><h5>Details</h5></th>



                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                <tr>
                                    <td><img src="@Model.ImageURL" width="400" style="border-radius:25px; padding-top:5px; padding-bottom:5px"></td>
                                    <td>

                                        <h5>Rating: @Model.Rating</h5>
                                        <h5>Address: @Model.Country</h5>
                                        <h5>Website: <a href="@Model.Website">@Model.Website </a> </h5>

                                    </td>

                                </tr>

                            </tbody>
                        </table>
                        <div class="row" style="padding-bottom:10px">
                            <form class="col-md-4 col-md-offset-4" asp-action="Delete">
                                <input type="hidden" asp-for="Id" />
                                <input style="margin-bottom:10px" type="submit" value="Delete" class="pb-5 btn btn-danger" />
                                <a asp-area="Bars" asp-controller="Bars" asp-action="ListBars" style="margin-bottom:5px" class="btn btn-success pt-6">Cancel</a>
                            </form>
                        </div>
                    </div>
                    </div>
                    </div>
                    </div>
                    </div>
