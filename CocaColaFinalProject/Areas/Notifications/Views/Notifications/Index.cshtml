@model IEnumerable<NotificationViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
}
    <div class="bg-1 section" id="events" style="margin-top:-18px">
        <div class="inner" data-image="/assets/images/content/ccback12.jpg" data-topspace="1" style="background-image: url('/assets/images/content/ccback12.jpg'); padding-top: 1px;">
            <div class="inner" data-topspace="1" data-bottomspace="1" style="background-image: none; ">
                <h3 class="hdr4">Notifications</h3>
                <div style="background-color:rgba(16, 6, 6, 0.80)">

                    @if (Model.Count() == 0)
                    {
                        <center>
                            <h3 style="padding-bottom:100px">
                                You have no notifications yet...
                            </h3>
                        </center>
                    }
                    else
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        <h5>
                                            Notification From
                                        </h5>
                                    </th>
                                    <th>
                                        <h5>
                                            Notification Description
                                        </h5>
                                    </th>
                                    <th>
                                        <h5>
                                            Notification Date
                                        </h5>
                                    </th>
                                    <th>
                                        <h5></h5>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    if (item.IsSeen == true)
                                    {
                                        <tr>
                                            <td>
                                                <dl class="row">
                                                    <dd class="col-sm-10">
                                                        @item.Username
                                                    </dd>
                                                </dl>
                                            </td>
                                            <td>
                                                <dl class="row">
                                                    <dd class="col-sm-10">
                                                        @item.Description
                                                    </dd>
                                                </dl>
                                            </td>
                                            <td>
                                                <dl class="row">
                                                    <dd class="col-sm-10">
                                                        @item.EventDate
                                                    </dd>
                                                </dl>
                                            </td>
                                            <th>
                                                <h5></h5>
                                            </th>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr style="background-color:gold transparent">
                                            <td>
                                                <dl class="row">
                                                    <dd class="col-sm-10">
                                                        <h5>
                                                            @item.Username
                                                        </h5>
                                                    </dd>
                                                </dl>
                                            </td>
                                            <td>
                                                <dl class="row">
                                                    <dd class="col-sm-10">
                                                        <h5>
                                                            @item.Description
                                                        </h5>
                                                    </dd>
                                                </dl>
                                            </td>
                                            <td>
                                                <dl class="row">
                                                    <dd class="col-sm-10">
                                                        <h5>
                                                            @item.EventDate
                                                        </h5>
                                                    </dd>
                                                </dl>
                                            </td>
                                            <td>

                                                <form asp-action="MarkAsSeen" asp-route-id="@item.Id" method="post">
                                                    <a class="btn btn-default btn-sm notificationBtn" style="margin-bottom:5px">
                                                        <i class="fa fa-eye" style="color:gold">
                                                        </i><font style="color:gold"> Mark as seen</font>
                                                    </a>
                                                </form>

                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    }
                    <script src="/assets/js/jquery.min.js"></script>
                    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>

                    <script src="/assets/js/NotificationSeen.js"></script>
