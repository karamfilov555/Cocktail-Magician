@model BarReviewViewModel
@*@{
    ViewData["Title"] = "_LeaveReviewPartial";
}*@
<head>
    <link rel="stylesheet" href="~/kendo-ui/styles/kendo.common-material.min.css" />
    <link rel="stylesheet" href="~/kendo-ui/styles/kendo.material.min.css" />

    <script src="~/jquery/dist/jquery.js"></script>
    <script src="~/bootstrap/dist/js/bootstrap.bundle.js"></script>
    @*Kendo Start Here:*@
    <script src="~/kendo-ui/js/kendo.all.min.js"></script>
    <script src="~/kendo-ui/js/kendo.aspnetmvc.min.js"></script>
</head>

<div class="bg-1 section" id="events" style="margin-top:-18px">
    <div class="inner" data-image="/assets/images/content/ccback12.jpg" data-topspace="1" style="background-image: url('/assets/images/content/ccback12.jpg'); padding-top: 1px;">
        <div class="inner" data-topspace="1" data-bottomspace="1" style="background-image: none; ">
            <h3 class="hdr4">Leave a comment for @Model.BarName</h3>
            <div style="background-color:rgba(16, 6, 6, 0.80);padding-top:20px">

                <div class="row" style="margin-right:20px">
                    <form class="col-md-4 col-md-offset-4" asp-area="Reviews" asp-controller="BarReviews" asp-action="CreateBarReview">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <dd hidden>
                            <input asp-for="BarId" value="@Model.BarId" />
                            <input asp-for="BarName" value="@Model.BarName" />
                            <input asp-for="UserID" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />
                        </dd>
                        @*<dd class="col-sm-12">
                        <textarea type="text" asp-for="Description" class="active box-shadow" id="MyTextArea" rows="7" cols="50" maxlength="500" placeholder=" --Your text here--"></textarea>
                    </dd>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <div class="form-group col-sm-12">
                        <input type="submit" value="&#128190 Submit" class="btn btn-outline-info" />
                    </div>*@
                        <div class="form-group">
                            <label class="label-sm">Rating</label>
                            <kendo-rating style="color:gold" name="rating"
                                          min="1" max="10"
                                          value="@Model.Rating">
                            </kendo-rating>
                            <p>
                                <span asp-validation-for="Rating" class="text-danger"></span>
                            </p>
                        </div>
                        <div class="form-group">
                            <label class="label-sm">Description</label>
                            <textarea asp-for="Description" class="form-control input-sm" rows="5" placeholder="Type your review..."></textarea>
                            <br />
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <p>
                                <button class="btn btn-primary" type="submit">Submit</button>
                            </p>
                        </div>
                    </form>
                </div>
                </div>
            </div>
        </div>
            </div>
